<Window x:Class="Chat_P2P.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_P2P"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="P2P Private Chat" Height="450" Width="800">
    <Grid Background="#333333" KeyDown="Grid_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
            <Label Content="IP собеседника:" Foreground="White"
                   FontSize="15"/>
            <TextBox x:Name="IpBox" Width="150" Margin="5,0"
                     FontSize="15"
                     VerticalAlignment="Center"
                     Style="{DynamicResource ResourceKey=RoundedTextBoxStyle}"/>
            <Button Content="Запросить чат" Click="RequestChat_Click" Width="120"
                    Style="{DynamicResource ResourceKey=RoundedButtonStyle}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5">
            <Label Content="Открытый ключ собеседника:"  Foreground="White"
                   FontSize="15"/>
            <TextBox x:Name="PeerPublicKeyBox" Width="400" Margin="5,0" FontSize="15"
                     Style="{DynamicResource ResourceKey=RoundedTextBoxStyle}"/>
        </StackPanel>

        <TextBox x:Name="ChatBox" Grid.Row="2" Margin="5" 
                 Background="Transparent"
                 Foreground="White"
                 BorderBrush="White"
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                 Style="{DynamicResource ResourceKey=RoundedTextBoxStyleChat}"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="5">
            <TextBox x:Name="MessageBox" Width="500" Margin="0,0,5,0" FontSize="15"
                     Padding="2"
                     Style="{DynamicResource ResourceKey=RoundedTextBoxStyle}"/>
            <Button Content="Отправить" Click="SendMessage_Click" Width="100"
                    Style="{DynamicResource ResourceKey=RoundedButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
