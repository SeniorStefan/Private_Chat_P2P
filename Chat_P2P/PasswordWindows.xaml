<Window x:Class="Chat_P2P.PasswordWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_P2P"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="PasswordWindows" Height="170" Width="320">
    <Grid Background="#333333" KeyDown="Grid_KeyDown">
        <StackPanel Margin="10">
            <Label Content="Пароль закрытого ключа:" FontSize="15"
                   Foreground="White"/>
            <PasswordBox x:Name="PasswordBox"
                         Style="{DynamicResource ResourceKey=RoundedPasswordBoxStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="5"
                        HorizontalAlignment="Center">
                <Button Content="OK" 
                    Click="Ok_Click" Width="100"
                    VerticalAlignment="Center"
                    Style="{DynamicResource ResourceKey=RoundedButtonStyle}"/>
                <Button Content="Cancel" x:Name="CancelBtn"
                    Click="CancelBtn_Click" Width="100" Margin="40,0,0,0"
                    Style="{DynamicResource ResourceKey=RoundedButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
